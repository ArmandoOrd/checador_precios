@{
    ViewData["Title"] = "Home Page";
}

<div id='wrapper'>
    <form action='' class='form'>
        <p class='field  half'>
            <label class='label' for='name'>Nombre del Producto:</label><br />
            <input class='text-input' id='name' name='name' type='text'>
        </p>
        <p class='field  half'>
            <label class='label' for='codigo'>Codigo:</label><br />
            <input class='text-input' id='Codigo' name='codigo' type='text'>
        </p>
        <p class='field'>
            <label class='label' for='description'>Descripción:</label><br/>
            <textarea class='textarea' cols='50' id='Description' name='description' rows='4'></textarea>
        </p>
        <p class='field'>
            <label class='label' for='precio'>Precio:</label><br />
            <input class='text-input' id='Precio' name='precio' type='text'>
        </p>
        <p class='field'>
            <input class='button' type='submit' value='Buscar'>
        </p>
    </form>
</div>